<h1>Appearances#new</h1>
<p>Find me in app/views/appearances/new.html.erb</p>
<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest, Guest.all, :id, :name %>

    <%= f.label :episode_id %>
    <%= f.collection_select :episode, Episode.all, :id, :number %>

    <%= f.label :appearance_id %>
    <%= f.collection_select :appearance, Appearance.all, :id, :rating %>

    <%= f.submit %>