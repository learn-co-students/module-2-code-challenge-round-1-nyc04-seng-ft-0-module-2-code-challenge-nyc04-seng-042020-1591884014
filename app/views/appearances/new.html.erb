<% if @errors %>
    <% @errors.each do |error| %>
        <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@appearance) do |f| %>


    Choose an existing guest:
    <%= f.collection_select(:guest_id, Guest.all, :id, :name) %><br>

    Choose an existing episode:
    <%= f.collection_select(:episode_id, Episode.all, :id, :number) %><br>

    <%= f.label :rating %>
    <%= f.text_field :rating %><br>

    <%= f.submit %>

<% end %>