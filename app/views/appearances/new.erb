<h1>New Appearance</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <div><%= error %></div>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %> 
    <%= f.label "Rating" %>
    <%= f.text_field :rating %>

    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <%= f.collection_select :episode_id, Episode.all, :id, :number %>

    <%= f.submit %>
<% end %>