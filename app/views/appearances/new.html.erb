<h1>New Appearance Form</h1>

<% if flash[:errors].present? %>
    <% flash[:errors].each do |error| %>
    <p> <b> <%= error %> </b> </p>
    <% end %>
<% end %>



<%= form_for @appearance do |f|%>
    <%= f.label "Rating" %>
    <%= f.number_field :rating %>
    <br>
    <br>
    <%= f.label "Guest" %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name  %>
    <br>
    <br>
    <%= f.label "Episode" %>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %>
    <br>
    <br>
    <%= f.submit "Create" %>
<% end %>


