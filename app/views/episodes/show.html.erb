<h1><%= @episode.date %></h1>
<% if @episode.guests.count > 0 %>

<h2>Average Rating:
<%= @episode.appearances.average(:rating).round(1) %>
</h2>

<h3>Appearances:</h3>
    <% @episode.guests.each do |guest| %>
        <li>
            <%= link_to guest.name, guest_path(guest) %>
        </li>
    <% end %>

<% else %>

    <p>No Appearances yet, <%= link_to "create one!", new_appearance_path %>

<% end %>
