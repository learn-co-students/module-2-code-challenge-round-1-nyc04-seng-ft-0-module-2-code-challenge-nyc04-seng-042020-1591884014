<h1><%= @guest.name %></h1>

<h4> Appearances: </h4>

<% @appearances.each do |a| %>
    <% if a.guest_id == @guest.id %>       
        <ul> 
            <li> <%= link_to a.episode.date, episode_path(a.episode) %> </li> 
            <li> <%= a.rating %> </li> 
        </ul>
        <hr>
    <% end %>
<% end %>